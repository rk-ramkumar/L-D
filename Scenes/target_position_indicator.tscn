script/source = "extends Sprite2D

@onready var animation_player = $AnimationPlayer

@export var tile_map: TileMap

var is_move_started: bool = false

func _ready():
	Observer.move_started.connect(_on_move_started)
	Observer.move_completed.connect(_on_move_completed)
	Observer.actor_selected.connect(_on_actor_selected)

func _process(delta):
	if !is_move_started:
		return

	if !GameManager.selected_actor or animation_player.is_playing():
		return

	animate_move()

func animate_move():
	var target_position = tile_map.blocks[
		(GameManager.selected_actor.position_id + GameManager.currentDieNumber) - 1
	]
	position = tile_map.map_to_local(target_position)
	animation_player.play(\"zoom\")
	visible = true

func  _on_move_started():
	is_move_started = true

func _on_move_completed():
	is_move_started = false
	visible = false

func _on_actor_selected(actor):
	if !is_move_started:
		return
	animate_move()
"

